{
  "name": "@laputin/laputin",
  "version": "0.0.1",
  "description": "MIT",
  "main": "deploy/index.js",
  "author": "Ville Salonen <ville.salonen@iki.fi>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "command-line-args": "~5.0.2",
    "command-line-usage": "^5.0.4",
    "express": "^4.17.1",
    "file-type": "^12.4.2",
    "lodash": "^4.17.15",
    "node-ffprobe": "^3.0.0",
    "open": "^7.0.0",
    "read-chunk": "^3.2.0",
    "sqlite3": "4.1.0",
    "walk": "~2.3.9",
    "watch": "~1.0.1",
    "winston": "~2.4.1",
    "xxhash": "^0.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "~3.5.20",
    "@types/body-parser": "~1.16.8",
    "@types/chai": "~4.1.2",
    "@types/cors": "~2.8.3",
    "@types/express": "~4.11.1",
    "@types/lodash": "4.14.106",
    "@types/mocha": "~5.0.0",
    "@types/node": "^13.1.0",
    "@types/rimraf": "~2.0.2",
    "@types/sqlite3": "~3.1.3",
    "@types/supertest": "~2.0.0",
    "@types/watch": "~1.0.0",
    "@types/winston": "~2.3.9",
    "chai": "~4.1.2",
    "copyfiles": "^2.1.1",
    "mocha": "~5.0.5",
    "pkg": "^4.4.2",
    "rimraf": "^2.6.3",
    "supertest": "~3.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-client": "cd client && npx ng build --prod",
    "prebuild-exe": "npm run build",
    "build-exe": "rimraf deploy-exe && mkdir deploy-exe && pkg package.json --targets node12-win-x64 --out-path deploy-exe && npx copyfiles --flat node_modules/xxhash/build/Release/hash.node deploy-exe/",
    "prebuild-server": "rimraf deploy",
    "build-server": "tsc -p tsconfig.json --outDir deploy",
    "pretest-server": "npm run lint && rimraf deploy-tests && mkdir deploy-tests",
    "test-server": "tsc -p tsconfig.json --outDir deploy-tests && mocha deploy-tests/tests/*.js",
    "test-client": "cd client && npx ng lint --type-check && npx ng test --code-coverage --watch false",
    "start": "node deploy/index.js",
    "test": "npm run test-server && npm run test-client",
    "lint": "tslint --project tsconfig.json"
  },
  "pkg": {
    "scripts": "deploy/**/*.js",
    "assets": "client/dist/*"
  },
  "bin": "deploy/index.js"
}
