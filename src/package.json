    "winston": "~2.4.1"
  },
  "devDependencies": {
    "@types/bluebird": "~3.5.20",
    "@types/body-parser": "~1.16.8",
    "@types/chai": "~4.1.2",
    "@types/cors": "~2.8.3",
    "@types/express": "~4.11.1",
    "@types/lodash": "4.14.106",
    "@types/mocha": "~5.0.0",
    "@types/node": "~9.6.2",
    "@types/rimraf": "~2.0.2",
    "@types/sqlite3": "~3.1.3",
    "@types/supertest": "~2.0.0",
    "@types/watch": "~1.0.0",
    "@types/winston": "~2.3.9",
    "chai": "~4.1.2",
    "mocha": "~5.0.5",
    "supertest": "~3.0.0",
    "typescript": "2.8.1"
  },
  "scripts": {
    "build": "npm run build-server && npm run build-client",
    "build-client": "cd client && ng build",
    "prebuild-server": "rimraf deploy",
    "build-server": "tsc -p tsconfig.json --outDir deploy",
    "pretest-server": "npm run lint && rimraf deploy-tests && mkdir deploy-tests",
    "test-server": "tsc -p tsconfig.json --outDir deploy-tests && mocha deploy-tests/tests/*.js",
    "test-client": "cd client && ng lint --type-check && ng test --code-coverage --watch false",
    "start": "node deploy/index.js",
    "test": "npm run test-server && npm run test-client",
    "lint": "tslint --project tsconfig.json"
  }
}
