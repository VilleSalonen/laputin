// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": {"when": "$(basename).ts"}
    },
    
    "search.exclude": {
		"**/node_modules": true,
        "**/bower_components": true,
        "**/dist": true,
        "**/deploy": true,
        "**/*.js.map": true,
        "**/*.js": {"when": "$(basename).ts"}
    },
    
    "editor.tabSize": 4,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false
}
